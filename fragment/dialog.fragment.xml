<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog id="sIdDialog" type="Message" state="{dialogModel>/messageValueState}" title="{dialogModel>/messageTitle}">
		<content>
			<Text text="{dialogModel>/messageTxt}" />
		</content>
		<beginButton>
			<Button text="Close" />
		</beginButton>
	</Dialog>
</core:FragmentDefinition>